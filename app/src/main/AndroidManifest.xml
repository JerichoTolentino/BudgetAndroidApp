<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jericho.budgetapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".BudgetApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_budget_buddy_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_budget_buddy_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Presentation.MenuActivity"
            android:parentActivityName=".Presentation.MainActivity" />

        <!-- Manage Expenses -->
        <activity
            android:name=".Presentation.ManageExpensesActivity"
            android:parentActivityName=".Presentation.MainActivity" />
        <activity
            android:name=".Presentation.EditExpenseActivity"
            android:parentActivityName=".Presentation.ManageExpensesActivity" />
        <activity
            android:name=".Presentation.EditExpenseGroupActivity"
            android:parentActivityName=".Presentation.ManageExpenseGroupsActivity"
            android:windowSoftInputMode="adjustPan" />

        <!-- Manage Expense Groups -->
        <activity
            android:name=".Presentation.ManageExpenseGroupsActivity"
            android:parentActivityName=".Presentation.MainActivity" />
        <activity
            android:name=".Presentation.SelectExpensesActivity"
            android:parentActivityName=".Presentation.EditExpenseGroupActivity" />
        <activity
            android:name=".Presentation.ViewPurchaseHistory"
            android:parentActivityName=".Presentation.MainActivity" />

        <!-- Manage Budget Plans -->
        <activity
            android:name=".Presentation.EditBudgetPlanActivity"
            android:parentActivityName=".Presentation.ManageBudgetPlansActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Presentation.ManageBudgetPlansActivity" />
        <activity android:name=".Presentation.QuickAddExpenseActivity"></activity>
    </application>

</manifest>